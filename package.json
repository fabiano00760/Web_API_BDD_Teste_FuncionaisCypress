{
  "name": "automacao-cypress",
  "version": "1.0.0",
  "description": "Projeto de automação de testes em cypress",
  "main": "index.js",
  "scripts": {
    "test:api": "cypress run --env TAGS='@api'",
    "test:ui": "cypress run --env TAGS='@ui'",
    "test:api": "cypress run --spec 'cypress/integration/api/**/*.feature' --headless",
    "test:ui": "cypress run --spec 'cypress/integration/ui/**/*.feature'"
  },
  "author": "Fabiano De Barros Silva",
  "license": "ISC",
  "devDependencies": {
    "@mmisty/cypress-allure-adapter": "^3.2.2",
    "cucumber": "^6.0.7",
    "cypress": "^13.17.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-xpath": "^2.0.1",
    "node": "^23.4.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": "steps/stepsDefApis/*js",
   "stepDefinitions": "e2e/step_definition/*js"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.4",
    "cypress-plugin-api": "^2.11.2",
    "esbuild": "^0.24.2"
  }

  
}
